{
  "model": {
    "type": "custom_copynet_seq2seq",
    "source_namespace": "tokens",
    "target_namespace": "target_tokens",
    "tie_embeddings": false,
    "source_embedder": {
      "type": "basic",
      "token_embedders": {
        "tokens": {
          "type": "embedding",
          "embedding_dim": 128
        }
      }
    },
    "encoder": {
      "type": "lstm",
      "num_layers": 2,
      "input_size": 128,
      "hidden_size": 256,
      "bidirectional": true
    },
    "attention": {
      "type": "dot_product"
    },
    "max_decoding_steps": 100,
    "beam_size": 10
  },
  "iterator": {
    "type": "bucket",
    "sorting_keys": [["source_tokens", "num_tokens"]],
    "batch_size": 32,
    "padding_noise": 0.0,
    "cache_instances": true
  },
  "trainer": {
    "num_epochs": 10,
    "grad_norm": 2.0,
    "cuda_device": 0,
    "patience": 2,
    "summary_interval": 1,
    "shuffle": false,
    "should_log_parameter_statistics": false,
    "optimizer": {
      "type": "adam",
      "lr": 0.001
    }
  },
  "vocabulary": {
    "max_vocab_size": 50000
  },
  "reader": {
      "tokenizer": {
          "type": "subword",
          "model_path": "models/bpe.model"
      },
      "source_max_tokens": 800,
      "target_max_tokens": 200,
      "save_copy_fields": true,
      "separate_namespaces": true,
      "target_namespace": "target_tokens",
      "type": "ria"
  }
}